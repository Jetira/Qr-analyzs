# ChargeSentinel QR Security Service - Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=ChargeSentinel QR Security Service
APP_VERSION=2.0.0
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# For SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./chargesentinel.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/chargesentinel

# QR Security Settings
OFFICIAL_DOMAIN=https://official-charging-domain.com

# Trusted third-party domains (comma-separated)
# These domains will NOT be flagged as high-risk just for being different
TRUSTED_THIRD_PARTIES=google.com,www.google.com,play.google.com,maps.google.com,accounts.google.com,apple.com,www.apple.com,apps.apple.com,github.com,stackoverflow.com,wikipedia.org,youtube.com,stripe.com,paypal.com

# Risk Scoring Thresholds
RISK_THRESHOLD_LOW=30
RISK_THRESHOLD_MEDIUM=60

# URL Inspection Settings
URL_FETCH_TIMEOUT=10
URL_FETCH_MAX_SIZE=5242880
URL_FOLLOW_REDIRECTS=true
URL_MAX_REDIRECTS=5

# QR Image Settings
QR_MAX_FILE_SIZE=10485760
QR_ALLOWED_FORMATS=png,jpg,jpeg,gif,bmp

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
